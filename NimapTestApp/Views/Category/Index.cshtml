@model List<NimapTestApp.Models.Category>
@{
	ViewData["Title"] = "Category List";
}

<h2>Category List</h2>
<a asp-action="Create" class="btn btn-primary">Add New Category</a>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>CategoryId</th>
			<th>CategoryName</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var category in Model)
		{
			<tr>
				<td>@category.CategoryId</td>
				<td>@category.CategoryName</td>
				<td>
					<a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-warning">Edit</a>
					<a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
